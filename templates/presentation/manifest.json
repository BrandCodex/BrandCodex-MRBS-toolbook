{
  "$schema": "https://mrbs.dev/schema/v1/template.manifest.json",
  "template": {
    "type": "presentation",
    "name": "Brandcodex Presentation",
    "version": "1.0.0",
    "description": "Dark-theme presentation template for Brandcodex communications",
    "dimensions": {
      "width": 1920,
      "height": 1080,
      "aspect_ratio": "16:9",
      "unit": "px"
    }
  },
  "theme": {
    "mode": "dark",
    "primary_background": "{color.brand.primary}",
    "secondary_background": "{color.neutral.900}",
    "accent": "{color.brand.accent_cyan}",
    "text_primary": "#FFFFFF",
    "text_secondary": "{color.neutral.400}"
  },
  "layouts": [
    {
      "id": "title",
      "name": "Title Slide",
      "slide_index": 0,
      "purpose": "Opening slide - bold brand statement",
      "usage": "required_first",
      "zones": {
        "overline": {
          "position": {"x": 120, "y": 380, "width": 1680, "height": 40},
          "typography": "overline",
          "color": "{color.brand.accent_cyan}",
          "max_characters": 30,
          "alignment": "left",
          "required": false,
          "placeholder_text": "BRANDCODEX PRESENTS"
        },
        "title": {
          "position": {"x": 120, "y": 420, "width": 1680, "height": 200},
          "typography": "display_hero",
          "color": "#FFFFFF",
          "max_characters": 50,
          "alignment": "left",
          "required": true,
          "placeholder_text": "Presentation Title"
        },
        "subtitle": {
          "position": {"x": 120, "y": 640, "width": 1200, "height": 80},
          "typography": "body_large",
          "color": "{color.neutral.400}",
          "max_characters": 120,
          "alignment": "left",
          "required": false,
          "placeholder_text": "Supporting description or context"
        },
        "date": {
          "position": {"x": 120, "y": 980, "width": 300, "height": 30},
          "typography": "caption",
          "color": "{color.neutral.500}",
          "format": "MMMM YYYY",
          "required": false
        },
        "presenter": {
          "position": {"x": 1500, "y": 980, "width": 300, "height": 30},
          "typography": "caption",
          "color": "{color.neutral.500}",
          "alignment": "right",
          "required": false
        }
      },
      "background": "{color.gradients.codex_glow}",
      "decorative_elements": {
        "grid_pattern": {
          "type": "subtle_grid",
          "opacity": 0.05,
          "color": "{color.brand.accent_cyan}"
        }
      },
      "logo": {
        "variant": "reversed",
        "position": "top_right",
        "size": "80px height",
        "margin": "60px"
      }
    },
    {
      "id": "section",
      "name": "Section Divider",
      "slide_index": 1,
      "purpose": "Introduce new sections with impact",
      "usage": "recommended_every_4_slides",
      "zones": {
        "section_number": {
          "position": {"x": 120, "y": 400, "width": 200, "height": 60},
          "typography": "display_medium",
          "color": "{color.brand.accent_cyan}",
          "format": "0{n}",
          "required": false
        },
        "section_title": {
          "position": {"x": 120, "y": 460, "width": 1400, "height": 150},
          "typography": "display_large",
          "color": "#FFFFFF",
          "max_characters": 40,
          "required": true,
          "placeholder_text": "Section Title"
        },
        "section_description": {
          "position": {"x": 120, "y": 640, "width": 900, "height": 100},
          "typography": "body_large",
          "color": "{color.neutral.400}",
          "max_characters": 150,
          "required": false
        }
      },
      "background": "{color.brand.primary}",
      "accent_element": {
        "type": "vertical_line",
        "color": "{color.brand.accent_cyan}",
        "position": "left",
        "width": "4px",
        "margin_left": "80px"
      }
    },
    {
      "id": "content_text",
      "name": "Title + Content",
      "slide_index": 2,
      "purpose": "Standard content slide",
      "usage": "primary_content",
      "zones": {
        "slide_title": {
          "position": {"x": 120, "y": 80, "width": 1680, "height": 80},
          "typography": "h1",
          "color": "#FFFFFF",
          "max_characters": 50,
          "required": true,
          "placeholder_text": "Slide Title"
        },
        "content": {
          "position": {"x": 120, "y": 200, "width": 1680, "height": 750},
          "typography": "body_large",
          "color": "{color.neutral.100}",
          "supports": ["bullets", "numbered_list", "paragraphs"],
          "max_bullets": 5,
          "max_words_per_bullet": 12,
          "bullet_style": {
            "marker": "—",
            "marker_color": "{color.brand.accent_cyan}"
          },
          "required": true
        }
      },
      "background": "{color.neutral.900}"
    },
    {
      "id": "content_two_column",
      "name": "Two Column Layout",
      "slide_index": 3,
      "purpose": "Compare, contrast, or parallel content",
      "usage": "comparison",
      "zones": {
        "slide_title": {
          "position": {"x": 120, "y": 80, "width": 1680, "height": 80},
          "typography": "h1",
          "color": "#FFFFFF",
          "max_characters": 50,
          "required": true
        },
        "left_heading": {
          "position": {"x": 120, "y": 200, "width": 800, "height": 50},
          "typography": "h3",
          "color": "{color.brand.accent_cyan}",
          "max_characters": 30
        },
        "left_content": {
          "position": {"x": 120, "y": 270, "width": 800, "height": 680},
          "typography": "body",
          "color": "{color.neutral.100}",
          "max_bullets": 4
        },
        "right_heading": {
          "position": {"x": 1000, "y": 200, "width": 800, "height": 50},
          "typography": "h3",
          "color": "{color.brand.accent_coral}",
          "max_characters": 30
        },
        "right_content": {
          "position": {"x": 1000, "y": 270, "width": 800, "height": 680},
          "typography": "body",
          "color": "{color.neutral.100}",
          "max_bullets": 4
        }
      },
      "background": "{color.neutral.900}"
    },
    {
      "id": "content_image",
      "name": "Content + Image",
      "slide_index": 4,
      "purpose": "Text with supporting visual",
      "usage": "visual_support",
      "zones": {
        "slide_title": {
          "position": {"x": 120, "y": 80, "width": 800, "height": 80},
          "typography": "h1",
          "color": "#FFFFFF",
          "max_characters": 40,
          "required": true
        },
        "content": {
          "position": {"x": 120, "y": 200, "width": 800, "height": 750},
          "typography": "body_large",
          "color": "{color.neutral.100}",
          "max_bullets": 4,
          "required": true
        },
        "image": {
          "position": {"x": 1000, "y": 80, "width": 800, "height": 900},
          "accepts": ["jpg", "png", "svg"],
          "aspect_ratio": "flexible",
          "border_radius": "{effects.radius.lg}",
          "placeholder": "image_placeholder.png"
        }
      },
      "background": "{color.neutral.900}"
    },
    {
      "id": "code",
      "name": "Code Example",
      "slide_index": 5,
      "purpose": "Display code with syntax highlighting",
      "usage": "technical_content",
      "zones": {
        "slide_title": {
          "position": {"x": 120, "y": 80, "width": 1680, "height": 80},
          "typography": "h1",
          "color": "#FFFFFF",
          "max_characters": 50,
          "required": true
        },
        "code_block": {
          "position": {"x": 120, "y": 200, "width": 1680, "height": 700},
          "typography": "code_block",
          "background": "rgba(0, 0, 0, 0.4)",
          "border_left": "4px solid {color.brand.accent_cyan}",
          "border_radius": "{effects.radius.md}",
          "padding": "40px",
          "syntax_highlighting": {
            "strings": "{color.brand.accent_cyan}",
            "keywords": "{color.brand.accent_coral}",
            "comments": "{color.neutral.500}",
            "functions": "#FFFFFF"
          },
          "max_lines": 20,
          "required": true
        },
        "caption": {
          "position": {"x": 120, "y": 920, "width": 1680, "height": 40},
          "typography": "caption",
          "color": "{color.neutral.500}",
          "max_characters": 100
        }
      },
      "background": "{color.neutral.900}"
    },
    {
      "id": "quote",
      "name": "Quote",
      "slide_index": 6,
      "purpose": "Highlight impactful statement",
      "usage": "emphasis",
      "zones": {
        "quote_mark": {
          "position": {"x": 120, "y": 300, "width": 100, "height": 100},
          "content": """,
          "typography": "display_hero",
          "color": "{color.brand.accent_cyan}",
          "opacity": 0.5
        },
        "quote_text": {
          "position": {"x": 200, "y": 350, "width": 1520, "height": 300},
          "typography": "display_medium",
          "color": "#FFFFFF",
          "max_characters": 180,
          "alignment": "left",
          "required": true
        },
        "attribution": {
          "position": {"x": 200, "y": 700, "width": 1520, "height": 60},
          "typography": "body",
          "color": "{color.brand.accent_coral}",
          "required": true,
          "placeholder_text": "— Attribution Name, Title"
        }
      },
      "background": "{color.brand.primary}"
    },
    {
      "id": "diagram",
      "name": "Diagram / Architecture",
      "slide_index": 7,
      "purpose": "Technical diagrams and flowcharts",
      "usage": "technical_content",
      "zones": {
        "slide_title": {
          "position": {"x": 120, "y": 80, "width": 1680, "height": 80},
          "typography": "h1",
          "color": "#FFFFFF",
          "max_characters": 50,
          "required": true
        },
        "diagram": {
          "position": {"x": 120, "y": 200, "width": 1680, "height": 750},
          "accepts": ["svg", "png"],
          "style": {
            "colors": "Use brand palette",
            "lines": "{color.brand.accent_cyan}",
            "boxes": "{color.neutral.800} with cyan border",
            "text": "#FFFFFF"
          },
          "required": true
        },
        "caption": {
          "position": {"x": 120, "y": 960, "width": 1680, "height": 40},
          "typography": "caption",
          "color": "{color.neutral.500}"
        }
      },
      "background": "{color.neutral.900}"
    },
    {
      "id": "closing",
      "name": "Closing Slide",
      "slide_index": 8,
      "purpose": "End with call-to-action",
      "usage": "required_last",
      "zones": {
        "headline": {
          "position": {"x": 120, "y": 400, "width": 1680, "height": 150},
          "typography": "display_large",
          "color": "#FFFFFF",
          "max_characters": 40,
          "alignment": "center",
          "required": true,
          "placeholder_text": "Thank You"
        },
        "subheadline": {
          "position": {"x": 120, "y": 560, "width": 1680, "height": 80},
          "typography": "body_large",
          "color": "{color.neutral.400}",
          "max_characters": 80,
          "alignment": "center"
        },
        "cta": {
          "position": {"x": 660, "y": 700, "width": 600, "height": 60},
          "type": "button",
          "typography": "h4",
          "background": "{color.brand.accent_cyan}",
          "text_color": "{color.brand.primary}",
          "border_radius": "{effects.radius.md}",
          "alignment": "center"
        },
        "contact": {
          "position": {"x": 120, "y": 900, "width": 1680, "height": 80},
          "typography": "body",
          "color": "{color.neutral.500}",
          "alignment": "center",
          "placeholder_text": "brandcodex.org | @brandcodex"
        }
      },
      "background": "{color.gradients.codex_glow}",
      "logo": {
        "variant": "reversed",
        "position": "bottom_center",
        "size": "60px height",
        "margin_bottom": "40px"
      }
    }
  ],
  "usage_rules": {
    "min_slides": 5,
    "max_slides": 25,
    "required_layouts": ["title", "closing"],
    "recommended_structure": {
      "first": "title",
      "last": "closing",
      "section_divider_every": 4
    },
    "content_guidelines": {
      "max_bullets_per_slide": 5,
      "max_words_per_bullet": 12,
      "max_words_per_slide": 60,
      "min_font_size": "18pt",
      "one_idea_per_slide": true,
      "code_max_lines": 20
    }
  },
  "chart_colors": [
    "{color.brand.accent_cyan}",
    "{color.brand.accent_coral}",
    "{color.neutral.400}",
    "#5B8DEF",
    "#9C6ADE"
  ]
}
